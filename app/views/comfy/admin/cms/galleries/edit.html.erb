<%= content_for :right_column do %> 
	<div class="well well-sm">
		<div class="ba b--dashed bw3 relative h-100">
			<div class="h5 relative" id="galleryUploaderContainer">
				<%= file_field_tag :file, :class => "w-100 h-100 absolute o-0 image_uploader pointer" %>
			</div>
		</div>
	</div>
	<h4>Drop your images here</h4>
<% end %>
<div class="page-header">
  <h2>Edit Gallery</h2>
</div>
<%= comfy_form_for @gallery, :as => :gallery, :url => {:action => :update}  do |form| %>
  <%= render form %>
<% end %>

<% content_for :javascript do %>
	<script>
		CMS.gallery_images_path = '<%= comfy_admin_cms_site_gallery_images_path(@site, @gallery) %>'
		CMS.gallery_images_reorder_path = '<%= "#{comfy_admin_cms_site_gallery_images_path(@site, @gallery)}/reorder" %>'
	</script>
<% end %>
